{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@chat/*": ["src/chat/*"],
      "@chatbot/*": ["src/chatbot/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/common/config/*"],
      "@constants/*": ["src/common/constants/*"],
      "@interceptors/*": ["src/common/interceptors/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@logger/*": ["src/logger/*"],
      "@members/*": ["src/members/*"],
      "@socket/*": ["src/socket/*"],
      "@tarot/*": ["src/tarot/*"]
    }
  },
  "typeRoots": ["../../@types"],
  "include": ["src", "../../@types"]
}
